# Kiyya Desktop Application - Production Configuration
# This file contains production-specific environment variables
# DO NOT COMMIT SENSITIVE VALUES TO VERSION CONTROL

# Odysee API Configuration
VITE_ODYSSEE_PROXY=https://api.na-backend.odysee.com/api/v1/proxy

# Channel ID for content discovery (must include @ prefix)
# IMPORTANT: Update this with your actual channel ID before building
VITE_CHANNEL_ID=@kiyyamovies:b
CHANNEL_ID=@kiyyamovies:b

# External Links
# IMPORTANT: Update this with your actual Telegram link before building
VITE_TELEGRAM_LINK=https://t.me/YourChannel

# Application Metadata
APP_NAME=Kiyya
VITE_APP_NAME=Kiyya

# Current application version (must match package.json and tauri.conf.json)
APP_VERSION=1.0.0
VITE_APP_VERSION=1.0.0

# Update System
# IMPORTANT: Update this with your actual update manifest URL before building
# Must point to a public GitHub repository's raw content
VITE_UPDATE_MANIFEST_URL=https://raw.githubusercontent.com/YOURNAME/kiyya-releases/main/version.json

# Cache Configuration
VITE_CACHE_TTL_MS=1800000
VITE_MAX_CACHE_ITEMS=200

# Gateway Configuration
VITE_GATEWAY_FALLBACKS=https://api.lbry.tv/api/v1/proxy,https://api.odysee.com/api/v1/proxy

# Production Settings
# Disable debug mode for production
TAURI_DEBUG=false

# Log level for production (error, warn, info)
VITE_LOG_LEVEL=warn

# Disable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security Settings
VITE_DEFAULT_ENCRYPT_DOWNLOADS=false
VITE_NETWORK_TIMEOUT_MS=10000
VITE_MAX_RETRY_ATTEMPTS=3

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANIMATIONS=true
VITE_DEFAULT_VIDEO_QUALITY=auto
VITE_AUTO_UPGRADE_QUALITY=true

# Download Configuration
VITE_VAULT_DIRECTORY_NAME=vault
VITE_MIN_DISK_SPACE_BUFFER=209715200

# Local Server Configuration
VITE_LOCAL_SERVER_PORT=0
VITE_ENABLE_CONCURRENT_STREAMING=true
