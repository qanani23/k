# Kiyya Desktop Application Configuration
# DO NOT COMMIT REAL VALUES TO VERSION CONTROL
# Copy this file to .env.local and update with your actual values

# Odysee API Configuration
# Primary gateway for Odysee API calls
VITE_ODYSSEE_PROXY=https://api.na-backend.odysee.com/api/v1/proxy

# Channel ID for content discovery (must include @ prefix)
VITE_CHANNEL_ID=@kiyyamovies:b
# Rust backend also needs this without VITE_ prefix
CHANNEL_ID=@kiyyamovies:b

# External Links
# Telegram channel link for community
VITE_TELEGRAM_LINK=https://t.me/YourChannel

# Application Metadata
# Application name displayed in UI
APP_NAME=Kiyya
VITE_APP_NAME=Kiyya

# Current application version (must match package.json and tauri.conf.json)
APP_VERSION=1.0.0
VITE_APP_VERSION=1.0.0

# Update System
# URL to fetch version manifest for update checks
# Must point to a public GitHub repository's raw content
VITE_UPDATE_MANIFEST_URL=https://raw.githubusercontent.com/YOURNAME/kiyya-releases/main/version.json

# Cache Configuration
# Cache TTL in milliseconds (default: 30 minutes)
VITE_CACHE_TTL_MS=1800000

# Maximum number of items to keep in local cache
VITE_MAX_CACHE_ITEMS=200

# Gateway Configuration
# Comma-separated list of fallback gateways for resilience
VITE_GATEWAY_FALLBACKS=https://api.lbry.tv/api/v1/proxy,https://api.odysee.com/api/v1/proxy

# Development Settings
# Enable debug mode for development builds
TAURI_DEBUG=true

# Log level for development (error, warn, info, debug, trace)
VITE_LOG_LEVEL=info

# Enable performance monitoring in development
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security Settings
# Enable download encryption by default (true/false)
VITE_DEFAULT_ENCRYPT_DOWNLOADS=false

# Network timeout in milliseconds for API requests
VITE_NETWORK_TIMEOUT_MS=10000

# Maximum retry attempts for failed requests
VITE_MAX_RETRY_ATTEMPTS=3

# UI Configuration
# Default theme (dark/light)
VITE_DEFAULT_THEME=dark

# Enable GSAP animations (disable for performance or accessibility)
VITE_ENABLE_ANIMATIONS=true

# Default video quality preference (480p, 720p, 1080p, auto)
VITE_DEFAULT_VIDEO_QUALITY=auto

# Enable auto quality upgrade when network improves
VITE_AUTO_UPGRADE_QUALITY=true

# Download Configuration
# Default download directory name within app data folder
VITE_VAULT_DIRECTORY_NAME=vault

# Minimum free disk space buffer in bytes (200MB default)
VITE_MIN_DISK_SPACE_BUFFER=209715200

# Local Server Configuration
# Port range for local HTTP server (0 means random available port)
VITE_LOCAL_SERVER_PORT=0

# Enable concurrent streaming connections
VITE_ENABLE_CONCURRENT_STREAMING=true