{
  "name": "kiyya-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "npm run validate-config && npm run type-check && npm run build",
    "preview": "vite preview",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:prod": "node scripts/build-production.js && npm run build:prod && tauri build --config src-tauri/tauri.conf.json",
    "tauri:build:debug": "npm run build && tauri build --debug",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest --run tests/unit",
    "test:property": "vitest --run tests/property",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage --run",
    "test:all": "npm run test:unit && npm run test:property && npm run test:e2e",
    "test:a11y": "playwright test --grep accessibility",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate-config": "node scripts/validate-config.js",
    "validate-tauri": "node scripts/validate-tauri-config.js",
    "validate-build": "node scripts/build-production.js",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level moderate",
    "docs:validate": "node scripts/validate-docs.js",
    "analyze": "npm run build -- --mode analyze",
    "prebuild:prod": "npm run lint && npm run test:unit",
    "prerelease": "npm run test:all && npm run security:audit",
    "release:prepare": "node scripts/prepare-release.js",
    "release:create": "node scripts/create-release.js",
    "release:manifest": "node scripts/update-manifest.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "clsx": "^2.0.0",
    "gsap": "^3.12.2",
    "hls.js": "^1.4.12",
    "lucide-react": "^0.294.0",
    "plyr": "^3.7.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tauri-apps/cli": "^1.5.8",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "fast-check": "^3.15.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
